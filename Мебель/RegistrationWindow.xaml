<Window x:Class="Мебель.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Мебель"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="450" Width="800" WindowState="Maximized" ResizeMode="CanMinimize" Background="#FF212529" Foreground="#FF212529">

    <StackPanel>

        <StackPanel Grid.Row="0">
            <Label Content="Логин"/>
            <TextBox x:Name="LoginField" Foreground="White" Background="#FF22333F"/>
        </StackPanel>

        <StackPanel>
            <StackPanel Grid.Row="2">
                <Label Content="Пароль"/>
                <TextBox x:Name="PasswordField" Foreground="White" Background="#FF22333F"/>
            </StackPanel>
            <Button Padding="3" HorizontalAlignment="Center" Click="Registration" Content="Зарегистрироваться"/>
        </StackPanel>

    </StackPanel>
</Window>
    

