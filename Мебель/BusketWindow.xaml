<Window x:Class="Мебель.BusketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Мебель"
        mc:Ignorable="d"
        Title="BusketWindow" Height="450" Width="800" WindowState="Maximized" ResizeMode="CanMinimize" Foreground="#FFAEAED4" Background="#FF212529">
    <Grid>
        <ScrollViewer Margin="0,-30,-0.333,30" Foreground="#FFAEAED4">
            <StackPanel CanVerticallyScroll="True" x:Name="BasketElements" VerticalAlignment="Bottom" Margin ="10"/>
        </ScrollViewer>
        <Button Content="Oформить" HorizontalAlignment="Center" Click="Zak" VerticalAlignment="Bottom" Margin="10" />
    </Grid>
</Window>
